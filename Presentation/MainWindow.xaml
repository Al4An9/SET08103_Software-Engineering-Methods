<Window x:Class="Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="585.557" Width="1073.96">
    <Grid Background="#FFA1D0EE">
        <Label x:Name="LblTitle" Content="Build A Bike" HorizontalAlignment="Left" Margin="329,10,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontStyle="Italic" FontFamily="Stencil" Width="379"/>
        <Label x:Name="LblFrameColor" Content="Frame Color:" HorizontalAlignment="Left" Margin="10,204,0,0" VerticalAlignment="Top" Height="35" Width="132" FontSize="18" BorderBrush="Black" BorderThickness="2"/>
        <Label x:Name="LblGears" Content="Gears:" HorizontalAlignment="Left" Margin="377,93,0,0" VerticalAlignment="Top" Height="34" Width="131" FontSize="18" BorderBrush="Black" BorderThickness="2"/>
        <Label x:Name="LblWheels" Content="Wheels:" HorizontalAlignment="Left" Margin="715,89,0,0" VerticalAlignment="Top" Height="34" Width="132" FontSize="18" BorderBrush="Black" BorderThickness="2"/>
        <Label x:Name="LblBrakes" Content="Brakes:" HorizontalAlignment="Left" Margin="721,205,0,0" VerticalAlignment="Top" Height="34" Width="132" FontSize="18" BorderBrush="Black" BorderThickness="2"/>
        <Label x:Name="LblTotalCost" Content="Total Cost:" HorizontalAlignment="Left" Margin="733,394,0,0" VerticalAlignment="Top" Height="34" Width="134" FontSize="18" BorderThickness="2" BorderBrush="Black"/>
        <Label x:Name="LblFrameSize" Content="Frame size:" HorizontalAlignment="Left" Margin="10,305,0,0" VerticalAlignment="Top" Height="34" Width="132" FontSize="18" BorderBrush="Black" BorderThickness="2"/>
