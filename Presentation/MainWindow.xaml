        <Label x:Name="LblHandlebars" Content="Handlebars:" HorizontalAlignment="Left" Margin="377,312,0,0" VerticalAlignment="Top" Height="35" Width="132" FontSize="18" BorderBrush="Black" BorderThickness="2"/>
        <Label x:Name="LblTimescale" Content="Delivery time" HorizontalAlignment="Left" Margin="733,433,0,0" VerticalAlignment="Top" Height="36" Width="134" FontSize="18" BorderThickness="2" BorderBrush="Black"/>
